
<div class="row a_comment " id="comment_<%comment.id%>" >
  <div class="col-md-2">
    <span class="pull-right">
     <%= link_to gravatar_for(comment.user, size: 40), comment.user %>
    </span>
  </div>
  <div class="col-md-9">
  	<!-- <div class="col-md-11"> -->
	    <b><%= link_to comment.user.name, comment.user %></b>
	    <h3><%= comment.content %></h3>	    
	    <%= time_ago_in_words(comment.created_at) %> ago
	 <!--  </div> -->
    <!-- <div class=" col-md-1"> -->
	    <% if current_user?(comment.user) %>
			  <%= link_to "delete", comment, method: :delete ,data: { confirm: "Really?" }%>
			<% end %>
		<!-- </div> -->
  </div>
</div> 